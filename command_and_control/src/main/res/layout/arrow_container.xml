<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/arrowContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/double_arrow_margin"
        android:layout_marginStart="@dimen/arrow_margin"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:src="@drawable/right"
        app:layout_constraintBottom_toBottomOf="@+id/imageLeft"
        app:layout_constraintStart_toEndOf="@+id/imageLeft"
        app:layout_constraintTop_toTopOf="@+id/imageLeft" />

    <ImageView
        android:id="@+id/imageUp"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:src="@drawable/up"
        app:layout_constraintBottom_toTopOf="@+id/imageDown"
        app:layout_constraintEnd_toEndOf="@+id/imageDown"
        app:layout_constraintStart_toStartOf="@+id/imageDown" />

    <ImageView
        android:id="@+id/imageDown"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/arrow_margin"
        android:layout_marginEnd="@dimen/arrow_margin"
        android:src="@drawable/down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
